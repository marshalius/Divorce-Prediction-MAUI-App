<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divorce_Prediction.MainPage"
             BackgroundColor="Purple"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Spacing="100"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Hi! Do you want to review your marriage? Then complete this 54-question test and let the artificial intelligence measure the state of your marriage."
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            

            <Button
                x:Name="button_Start"
                HeightRequest="70"
                WidthRequest="200"
                FontSize="24"
                Text="Let's Start!"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="button_Start_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
